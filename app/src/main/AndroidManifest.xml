<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ridenow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RideNow"
        tools:targetApi="31">
        <activity
            android:name="HomePages.ConfirmRidePage"
            android:exported="true" />
        <activity
            android:name="HomePages.availablerides"
            android:exported="true" />
        <activity
            android:name="HomePages.CreatingRidePage"
            android:exported="true" />
        <activity
            android:name="Authentication.ForgotPassword"
            android:exported="true" />
        <activity
            android:name="HomePages.CustomerHomeScreen"
            android:exported="true" />
        <activity
            android:name="HomePages.DriverHomePage"
            android:exported="true" />
        <activity
            android:name="Authentication.DriverRegisterPage"
            android:exported="true" />
        <activity
            android:name="Authentication.DecidingPage"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="RideNow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="Authentication.LoginActivity"
            android:exported="true" />
        <activity
            android:name="Authentication.CustomerRegister"
            android:exported="true" />
    </application>

</manifest>