<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/driverfromAddresstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Address:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/driversnipperfromlocations"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:spinnerMode="dropdown"
            android:background="@color/white"
            android:textColorHint="@color/white"
            android:entries="@array/locations_array"
            />



        <TextView
            android:id="@+id/driverToAddresstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Address:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/driversnipperTolocations"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="@color/white"
            android:spinnerMode="dropdown"
            android:entries="@array/locations_array"
            />

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:background="@color/white"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Please enter price in $"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter the time here... any Instructions(optional)"
            android:inputType="textMultiLine"
            android:lines="2"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"

            />

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/upload_the_ride"
            android:backgroundTint="@color/Blue"
            android:layout_gravity="center"

            />

    </LinearLayout>

    </LinearLayout>


